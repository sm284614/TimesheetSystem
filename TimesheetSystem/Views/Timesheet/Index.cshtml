@model TimesheetSystem.ViewModels.WeeklyTimesheetViewModel
@{
    ViewData["Title"] = "Weekly Timesheet";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Weekly Timesheet</h2>
        </div>
    </div>

    <div class="row mb-3">
        @await Html.PartialAsync("_UserSelector", Model)
        @await Html.PartialAsync("_WeekSelector", Model)
    </div>

    @if (Model.SelectedUserId > 0)
    {
        <div class="row">
            <div class="col-md-12">
                @await Html.PartialAsync("_WeekEntriesList", Model)
                @await Html.PartialAsync("_ProjectSummaryList", Model)
            </div>
        </div>
    }
</div>
