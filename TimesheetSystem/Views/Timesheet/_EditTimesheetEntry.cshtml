@model TimesheetSystem.Models.TimesheetEntry

<div class="card">
	<div class="card-header">
		<h3>Add Timesheet Entry</h3>
	</div>
	<div class="card-body">
		<form asp-controller="Timesheet" asp-action="Create" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

			<div class="form-group mb-3">
				<label asp-for="ProjectId" class="form-label"></label>
				<select asp-for="ProjectId" class="form-select" asp-items="@(new SelectList(Model.AvailableProjects, "Id", "Name"))">
					<option value="">Select Project:</option>
				</select>
				<span asp-validation-for="ProjectId" class="text-danger"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="Date" class="form-label"></label>
				<input asp-for="Date" type="date" class="form-control" />
				<span asp-validation-for="Date" class="text-danger"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="Hours" class="form-label"></label>
				<input asp-for="Hours" type="number" step="0.1" min="0.1" max="24" class="form-control" />
				<span asp-validation-for="Hours" class="text-danger"></span>
				<small class="form-text text-muted">Enter hours worked (0.1 to 24.0)</small>
			</div>

			<div class="form-group mb-3">
				<label asp-for="Description" class="form-label"></label>
				<textarea asp-for="Description" class="form-control" rows="3" maxlength="500"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
				<small class="form-text text-muted">Optional: Describe the work performed</small>
			</div>

			<div class="form-group">
				<button type="submit" class="btn btn-primary">Save Entry</button>
				<a asp-controller="Timesheet" asp-action="Index" class="btn btn-secondary">Cancel</a>
			</div>
		</form>
	</div>
</div>

