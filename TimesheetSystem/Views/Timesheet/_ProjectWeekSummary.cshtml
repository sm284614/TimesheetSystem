@model TimesheetSystem.ViewModels.WeeklyTimesheetViewModel
<div class="card">
	<div class="card-header">
		<h3>Project hours this week</h3>
	</div>
	<div class="card-body">
		<table class="table table-striped table-hover ">
			<colgroup>
				<col style="width: 80%;">
				<col style="width: 20%;">
			</colgroup>
			<thead>
				<tr>
					<th>Project</th>
					<th>Hours</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var projectLog in Model.ProjectTotals)
				{
					<tr>
						<td>@projectLog.ProjectName</td>
						<td>@projectLog.TotalHours.ToString("F2")</td>
					</tr>
				}
				@if (Model.Entries.Count == 0)
				{
					<tr>
						<td colspan="2"><p>No project hours recorded for selected week</p></td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>